/**
 * @param {number[]} happiness
 * @param {number} k
 * @return {number}
 */
var maximumHappinessSum = function(happiness, k) {
            happiness.sort((a, b) => b - a);

    let sum = 0;

        for (let i = 0; i < k; i++) {
        let value = happiness[i] - i;

                if (value > 0) {
            sum += value;
        }
    }

    return sum;
};

    
happiness = [1,2,3], k = 2
